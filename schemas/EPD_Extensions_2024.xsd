<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:epd13="http://www.iai.kit.edu/EPD/2013" xmlns:epd19="http://www.iai.kit.edu/EPD/2019"
   xmlns:epd24="http://www.indata.network/EPD/2024" xmlns="http://www.indata.network/EPD/2024" targetNamespace="http://www.indata.network/EPD/2024"
   xmlns:common="http://lca.jrc.it/ILCD/Common" xmlns:process="http://lca.jrc.it/ILCD/Process" xmlns:ilcd="http://lca.jrc.it/ILCD"
   elementFormDefault="qualified" attributeFormDefault="qualified" version="1.1">
   <xs:import namespace="http://lca.jrc.it/ILCD/Common" schemaLocation="ILCD_Common_Groups.xsd"/>

   <xs:element name="productIds">
      <xs:complexType>
         <xs:sequence>
            <xs:element ref="productId" minOccurs="0" maxOccurs="unbounded"/>
         </xs:sequence>
      </xs:complexType>
   </xs:element>
   
   <xs:element name="productId">
      <xs:complexType>
         <xs:simpleContent>
            <xs:extension base="xs:string">
               <xs:attribute name="type" type="xs:string"/>
               <xs:anyAttribute/>
            </xs:extension>         
         </xs:simpleContent>
      </xs:complexType>
   </xs:element>
   
   <xs:element name="manufacturers">
      <xs:complexType>
         <xs:sequence>
            <xs:element ref="manufacturer" minOccurs="0" maxOccurs="unbounded"/>
         </xs:sequence>
      </xs:complexType>
   </xs:element>
      
   <xs:element name="manufacturer">
      <xs:complexType>
         <xs:sequence>
            <xs:element name="contact" type="common:GlobalReferenceType" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="sites" minOccurs="0" maxOccurs="1"/>
            <xs:any namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
         </xs:sequence>
         <xs:attribute name="isProvidingData" type="xs:boolean" use="required"/>
         <xs:anyAttribute/>
      </xs:complexType>
   </xs:element>
   
   <xs:element name="sites">
      <xs:complexType>
         <xs:sequence>
            <xs:element ref="site" minOccurs="0" maxOccurs="unbounded"/>
         </xs:sequence>
      </xs:complexType>
   </xs:element>
   
   <xs:element name="site">
      <xs:complexType>
         <xs:sequence>
            <xs:element name="name" type="xs:string" minOccurs="1" maxOccurs="1"/>
            <xs:element name="facilityIdentifier" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="olc" type="OLC" minOccurs="1" maxOccurs="1"/>
            <xs:element name="geoCode" type="xs:string" minOccurs="1" maxOccurs="1"/>
            <xs:element name="streetAddress" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:any namespace="##other" minOccurs="0" maxOccurs="unbounded"/>
         </xs:sequence>
         <xs:anyAttribute/>
      </xs:complexType>
   </xs:element>
   
   <xs:simpleType name="OLC">
      <xs:annotation>
         <xs:documentation>Open Location Code (https://maps.google.com/pluscodes/)</xs:documentation>
      </xs:annotation>
      <xs:restriction base="xs:string">
         <xs:pattern value="[23456789C][23456789CFGHJMPQRV][23456789CFGHJMPQRVWX]{6}\+[23456789CFGHJMPQRVWX]{2,7}"/>
      </xs:restriction>
   </xs:simpleType>
   
   <xs:element name="serviceLife">
      <xs:complexType>
         <xs:sequence>
            <xs:element name="years" type="xs:int" minOccurs="1" maxOccurs="1"/>
            <xs:element ref="epd24:useConditions" minOccurs="1" maxOccurs="unbounded"/>
            <xs:element name="referenceToStandard" type="common:GlobalReferenceType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="referenceToUseConditionsDocumentation" type="common:GlobalReferenceType" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="comment" type="common:FTMultiLang" minOccurs="0" maxOccurs="unbounded">
            </xs:element>
         </xs:sequence>
      </xs:complexType>
      <xs:unique name="commentLangUniqueConstraint">
         <xs:selector xpath="epd24:comment"/>
         <xs:field xpath="@xml:lang"/>
      </xs:unique>
      <xs:unique name="referenceToStandardShortDescriptionLangUniqueConstraint">
         <xs:selector xpath="epd24:referenceToStandard/common:shortDescription"/>
         <xs:field xpath="@xml:lang"/>
      </xs:unique>
      <xs:unique name="referenceToUseConditionsDocumentationShortDescriptionLangUniqueConstraint">
         <xs:selector xpath="epd24:referenceToUseConditionsDocumentation/common:shortDescription"/>
         <xs:field xpath="@xml:lang"/>
      </xs:unique>
   </xs:element>

   <xs:element name="useConditions">
      <xs:complexType>
         <xs:attribute name="factor" type="epd24:UseConditionFactors" use="required"/>
         <xs:attribute name="degree" type="epd24:UseConditionDegrees" use="required"/>
      </xs:complexType>
   </xs:element>

   <xs:simpleType name="UseConditionFactors">
      <xs:restriction base="xs:string">
         <xs:enumeration value="A - inherent quality"/>
         <xs:enumeration value="B - design level"/>
         <xs:enumeration value="C - work execution"/>
         <xs:enumeration value="D - indoor environment"/>
         <xs:enumeration value="E - outdoor environment"/>
         <xs:enumeration value="F - usage conditions"/>
         <xs:enumeration value="G - maintenance level"/>
      </xs:restriction>
   </xs:simpleType>

   <xs:simpleType name="UseConditionDegrees">
      <xs:restriction base="xs:string">
         <xs:enumeration value="0"/>
         <xs:enumeration value="1"/>
         <xs:enumeration value="2"/>
         <xs:enumeration value="3"/>
         <xs:enumeration value="4"/>
         <xs:enumeration value="5"/>
         <xs:enumeration value="n/a"/>
      </xs:restriction>
   </xs:simpleType>


</xs:schema>
